<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AllCourse">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_play_button"/>


                <TextView
                    android:id="@+id/courseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conquer JEE 2021"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/course_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/course_name">

                <ImageView
                    android:id="@+id/banner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/video_course" />

            </LinearLayout>


            <TextView
                android:id="@+id/course_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:gravity="center"
                android:text="Course Starts From "
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/course_banner" />

            <TextView
                android:id="@+id/student_name"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="Hi, "
                android:textColor="#000"
                android:background="#fff"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@+id/course_date" />

            <LinearLayout
                android:id="@+id/course_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                app:layout_constraintTop_toBottomOf="@+id/student_name">

                <RelativeLayout
                    android:id="@+id/live_class"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/transparent_button"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/live_icon"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_live" />

                    <TextView
                        android:id="@+id/liveclass_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toEndOf="@+id/live_icon"
                        android:text="Live Class"
                        android:textColor="#8A8A8A"
                        android:textSize="16dp"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/drop_down"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_play_button" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/playlist"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/transparent_button"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/playlist_icon"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_playlist" />

                    <TextView
                        android:id="@+id/playlist_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toEndOf="@+id/playlist_icon"
                        android:text="Play List"
                        android:textColor="#8A8A8A"
                        android:textSize="16dp"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/playlist_drop_down"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_explore" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/study_notes"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/transparent_button"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/study_notes_icon"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_study_notes" />

                    <TextView
                        android:id="@+id/study_notes_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toEndOf="@+id/study_notes_icon"
                        android:text="Study Notes"
                        android:textColor="#8A8A8A"
                        android:textSize="16dp"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/study_notes_drop_down"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_online_notes" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_allCourse"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/limites_seat"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FAADAD"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/price"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent">



                    <TextView
                        android:id="@+id/limit_seat"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="Limites Seats Available, Hurry, Enroll Now!"
                        android:textColor="#FF5252"
                        android:textSize="13dp"
                        android:textStyle="bold"/>




                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center_vertical"
                    android:background="#fff">

                    <TextView
                        android:id="@+id/rs_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="â‚¹"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/course_price"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/rs_sign"
                        android:text="64,949/-"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <Button
                        android:id="@+id/buynow_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:background="#2196F3"
                        android:text="BUY NOW"
                        android:textColor="#fff" />




                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>