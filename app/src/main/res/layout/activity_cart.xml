<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Cart">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnNext"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/rectstroke">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/_36sdp"
               android:orientation="horizontal">
               <TextView
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:paddingStart="@dimen/_10sdp"
                   android:textColor="@color/black"
                   android:gravity="center_vertical"
                   android:textSize="@dimen/_12sdp"
                   android:fontFamily="@font/muli_bold"
                   android:text="Item Name"/>
               <View
                   android:layout_width="@dimen/_1sdp"
                   android:layout_height="match_parent"
                   android:background="@color/editcolor"/>
               <TextView
                   android:layout_width="@dimen/_84sdp"
                   android:layout_height="match_parent"
                   android:gravity="center_vertical"
                   android:textSize="@dimen/_12sdp"
                   android:textColor="@color/black"
                   android:paddingStart="@dimen/_5sdp"
                   android:fontFamily="@font/muli_bold"
                   android:text="Item Price"/>

           </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/editcolor"/>
            <include layout="@layout/cart_item"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:weightSum="2"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wallet"
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_regular"
                    android:textColor="@color/black"></TextView>



                <TextView
                    android:id="@+id/walletprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:fontFamily="@font/muli_extrabold"
                    android:textColor="@color/colorPrimaryDark"></TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/editcolor"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/_10sdp"
                android:gravity="center_vertical|end">
                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: â‚¹ 1,000"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/muli_semibold"
                        android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btnNext"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44sdp"
        android:background="@color/colorAccent"
        android:text="Next Step"
        android:fontFamily="@font/muli_semibold"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        />

</RelativeLayout>