    <LinearLayout
        android:weightSum="5"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:id="@+id/bottomTab"
        android:background="@drawable/bottom_navigation_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout

            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/homeLl"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/homeIv"
                android:src="@drawable/ic_home"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/homeTv"
                android:text="Home"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#606060"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/classroomLl"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/classroomIv"
                android:src="@drawable/ic_classroom"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/classroomTv"
                android:text="Classroom"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#606060"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout

            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/quizLl"
            android:orientation="vertical"
            android:layout_width="0dp"

            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/quizIv"
                android:src="@drawable/ic_quiz_build"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/quizTv"
                android:text="Quiz"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#606060"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/paperLl"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/paperIv"
                android:src="@drawable/ic_modelpaper"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/paperTv"
                android:text="Model Paper"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#606060"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout

            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/moreLl"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/moreIv"
                android:src="@drawable/navbar_02"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/moreTv"
                android:text="More"
                android:textSize="10dp"
                android:textColor="#606060"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        </LinearLayout>


</RelativeLayout>