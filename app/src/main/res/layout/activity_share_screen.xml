<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShareScreen"
    android:background="#4E4E4E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/refer_vector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rahul Mahipal"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@+id/user_image" />

        <LinearLayout
            android:id="@+id/score_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@+id/user_name">

            <LinearLayout
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:textAlignment="center"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:textSize="22dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.75"
                    android:id="@+id/totalmark"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Out of 28"
                    android:id="@+id/totalmarkoutof"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />





            </LinearLayout>

            <LinearLayout
                android:id="@+id/rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rank"
                    android:textAlignment="center"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:textSize="22dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="107"
                    android:textAlignment="center"
                    android:id="@+id/ranking"
                    android:textColor="#FFFFFF"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Out of 206"
                    android:id="@+id/rankingoutof"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
    <TextView
        android:id="@+id/quiz_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/instal_app"
        android:padding="10dp"
        android:text="NIELIT 2020: Practice Quiz 32"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
          />

    <LinearLayout
        android:id="@+id/instal_app"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:background="#2196F3"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Install our app on Android"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22dp" />


    </LinearLayout>

</RelativeLayout>