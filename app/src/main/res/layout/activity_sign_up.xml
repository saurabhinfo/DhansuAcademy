<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mobo_win_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile_picture"
            />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        android:visibility="gone"

        android:textAlignment="center"
        android:textSize="16dp"
       />

    <EditText
        android:id="@+id/etName"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectanglewhite"
        android:drawableStart="@drawable/ic_person_outline_black_24dp"
        android:drawablePadding="6dp"
        android:ems="10"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Your name"
        android:inputType="textPersonName"
        android:paddingLeft="18dp"
        android:textColorHint="#13AFF6"
       />

    <EditText
        android:id="@+id/etlastname"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/rectanglewhite"
        android:drawableStart="@drawable/ic_person_outline_black_24dp"
        android:drawablePadding="6dp"
        android:ems="10"

        android:hint="Mahipal"
        android:inputType="textPersonName"
        android:paddingLeft="18dp"
        android:textColorHint="#13AFF6"
          />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rectanglewhitewithoutstroke"
        android:drawableStart="@drawable/ic_mail_outline_black_24dp"
        android:paddingLeft="18dp"
        android:drawablePadding="6dp"
        android:inputType="textEmailAddress"
          />

    <EditText
        android:id="@+id/etMobile"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone"
        android:background="@drawable/rectanglewhitewithoutstroke"
        android:drawableStart="@drawable/ic_phone_android_black_24dp"
        android:drawablePadding="6dp"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        android:paddingLeft="18dp"
          />
    <TextView
        android:id="@+id/etdob"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectanglewhitewithoutstroke"
        android:drawableStart="@drawable/ic_person_outline_black_24dp"
        android:drawablePadding="6dp"
        android:ems="10"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="DOB"
        android:visibility="gone"
        android:inputType="textPersonName"
        android:paddingLeft="18dp"
        />
        <LinearLayout
            android:layout_width="303dp"
            android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/radioGroup">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="  Male"
                android:checked="true"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="   Female"
                android:checked="false"
                android:textSize="20dp" />
        </RadioGroup>
        </LinearLayout>

        <Spinner
            android:id="@+id/etcountry"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectanglewhitewithoutstroke"
            android:drawableStart="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="6dp"
            android:ems="10"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Country"
            android:visibility="gone"
            android:inputType="textPersonName"
            android:paddingLeft="18dp"
            />
        <Spinner
            android:id="@+id/etstate"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectanglewhitewithoutstroke"
            android:drawableStart="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="6dp"
            android:ems="10"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="State"
            android:inputType="textPersonName"
            android:paddingLeft="18dp"
            />
        <Spinner
        android:id="@+id/etcity"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectanglewhitewithoutstroke"
        android:drawableStart="@drawable/ic_person_outline_black_24dp"
        android:drawablePadding="6dp"
        android:ems="10"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="City"
        android:inputType="textPersonName"
        android:paddingLeft="18dp"
        />



    <EditText
        android:id="@+id/etPassword"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:ems="10"
        android:hint="Zipcode"
        android:inputType="number"
        android:visibility="gone"
        android:background="@drawable/rectanglewhitewithoutstroke"
        android:drawableStart="@drawable/ic_lock_outline_black_24dp"
        android:paddingLeft="18dp"
        android:drawablePadding="6dp"
          />
        <EditText
            android:id="@+id/etPwd"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Refer Code"

            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            android:paddingLeft="18dp"
            android:drawablePadding="6dp"
            android:background="@drawable/rectanglewhitewithoutstroke"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmail"
            app:layout_constraintVertical_bias="0.063" />

    <EditText
        android:id="@+id/etCode"
        android:layout_width="303dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="@dimen/_10sdp"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_refer"
        android:paddingLeft="18dp"
        android:drawablePadding="6dp"
        android:hint="Referal Code"
        android:background="@drawable/rectanglewhitewithoutstroke"
    />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="171dp"
        android:layout_height="52dp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/darkrectangle2"
        android:text="Save Info"
        android:textColor="#fff"
         />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:visibility="gone"
        android:textSize="16dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/txtSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login here"
        android:visibility="gone"
        android:textSize="16dp"
        android:textColor="#2240EA"
        android:textStyle="bold"
          />

    </LinearLayout>

</ScrollView>