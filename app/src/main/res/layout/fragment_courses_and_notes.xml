<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@drawable/transparent_button"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/fragment_courses_and_notes"
    >

<!--    android:background="#ffffff"-->


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"

        android:background="#fff">

        <LinearLayout
            android:id="@+id/course-image"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <ImageView
                android:id="@id/banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/video_course"
                android:scaleType="fitXY"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/course_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:text=" : 400+ hrs of Live Classes With Interactive live quizzes"
                android:textSize="12dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_details"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/calender_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_calendar"
                android:visibility="visible" />

            <TextView
                android:id="@+id/endDateTime"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/calender_icon"
                android:gravity="center"
                android:text="21st Apr- 30thApr"
                android:textColor="#858585"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buynow_buttonn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/course_date"
                android:background="@drawable/button_background_blue"
                android:padding="10dp"
                android:text="VIEW COURSE"
                android:textColor="#fff" />


        </LinearLayout>


    </RelativeLayout>




</LinearLayout>

