<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_15sdp"
    android:orientation="vertical"
    tools:context=".fragments.ResultReport">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal"
        android:background="@drawable/stroke">
        <LinearLayout
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/tintcolor"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/editcolor"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_10sdp"
                android:textColor="@color/black"
                android:text="Number Of Question"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10sdp"
                android:text="Skip"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10sdp"
                android:text="Answered"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10sdp"
                android:text="Not Attempted"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10sdp"
                android:text="Correct"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10sdp"
                android:text="Incorrect"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10sdp"
                android:text="Review"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/tintcolor"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_10sdp"
                android:textColor="@color/black"
                android:text=""/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:id="@+id/txtSkip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10sdp"
                android:text="Skip"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:id="@+id/txtAttempt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10sdp"
                android:text="Answered"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:id="@+id/txtNotAttemp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10sdp"
                android:text="Not Attempted"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:id="@+id/txtCorrect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10sdp"
                android:text="Correct"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:id="@+id/txtIncoorect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10sdp"
                android:text="Incorrect"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>
            <TextView
                android:id="@+id/txtReview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:fontFamily="@font/muli_bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_10sdp"
                android:text="Review"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/tintcolor"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/tintcolor"/>

    </LinearLayout>


    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:visibility="gone"
        android:id="@+id/graph" />

</LinearLayout>